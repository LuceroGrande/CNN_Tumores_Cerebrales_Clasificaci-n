        <div id="confidences"></div>
    </div>

    <div class="panel">
        <h3>Vista 2D</h3>
        <img id="img2d" width="350">
        <br>
        <input type="range" id="sliceSlider" min="0" max="0" value="0" oninput="cambiarSlice()">
        <span id="sliceNumber">0</span>
    </div>

    <div class="panel">
        <h3>Vista 3D</h3>
        <img id="img3d" width="350">
