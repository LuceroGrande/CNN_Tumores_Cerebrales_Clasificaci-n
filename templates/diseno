<script>
let imgSlices = [];

function cambiarSlice() {
    let index = document.getElementById("sliceSlider").value;
    document.getElementById("img2d").src = "data:image/png;base64," + imgSlices[index];
    document.getElementById("sliceNumber").innerText = index;
}

function enviarCarpeta(event) {
    event.preventDefault();
    let formData = new FormData(document.getElementById("form"));
    document.getElementById("status").innerText = "Procesando...";

    fetch("/procesar", { method: "POST", body: formData })
    .then(r => r.json())
    .then(data => {
        if (data.error) { alert(data.error); return; }

        // Tumor principal
        document.getElementById("tumor").innerText = data.label;

        // Guardar slices
        imgSlices = data.img2d_slices;

        // Configurar slider
        let slider = document.getElementById("sliceSlider");
        slider.max = imgSlices.length - 1;
        slider.value = 0;
        document.getElementById("sliceNumber").innerText = 0;

        cambiarSlice();

        // Imagen 3D
        document.getElementById("img3d").src = "data:image/png;base64," + data.img3d;

        // Mostrar confidencias
        let confDiv = document.getElementById("confidences");
        confDiv.innerHTML = "";
        let table = document.createElement("table");
        table.className = "confidence-table";
        let header = table.insertRow();
        header.insertCell().innerText = "Tipo de Tumor";
        header.insertCell().innerText = "Confianza";

        for (let key in data.confidences) {
            let row = table.insertRow();
            row.insertCell().innerText = key;
            row.insertCell().innerText = data.confidences[key].toFixed(2);
        }
        confDiv.appendChild(table);

        document.getElementById("status").innerText = "Listo";
    });
}
</script>

